<Window x:Class="XamlEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XamlEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        Loaded="Window_Loaded" Closed="Window_Closed">
    <DockPanel LastChildFill="True">
        <Button DockPanel.Dock="Left"  Name="btnViewXaml" Width="100" Height="40"
                Content="View Xaml" Click="btnViewXaml_Click" />
        <TextBox AcceptsReturn="True" AcceptsTab="True" Name="txtXamlData"
                 FontSize="14" Background="Black" Foreground="Yellow"
                 BorderBrush="Blue" VerticalScrollBarVisibility="Auto" />
    </DockPanel>
</Window>
